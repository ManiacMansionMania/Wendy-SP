// Flur im Erdgeschoß
import function aufz();


/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
	oHaustuer.init_object(11);
	oTuerBad.init_object(17);

	oTuerTelefonzimmer.Clickable = false;
	oAufzugtuer.Clickable = true;
	oAufzugtuer.SetView(75);
	hKnoepfe.Enabled = false;
	RemoveWalkableArea(1);
}

function room_AfterFadeIn()
{
	// Bei Bedarf noch Nummer der weiteren Räume hinzufügen
	if ( player.PreviousRoom == 6 || player.PreviousRoom == 2 )
	{
		oAufzugtuer.Animate(0, 10, eOnce, eBlock); // 0 = auf
		RestoreWalkableArea(1);
		hKnoepfe.Enabled = true;
  }
}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hHaustuer_AnyClick()
{
	if ( any_click_on_door (11, oHaustuer, 50, 124, eDirLeft, 12, 139, 103, eDirDown) == 0 ) Unhandled ();
}

function hTuerBad_AnyClick()
{
	if ( any_click_on_door (17, oTuerBad, 84, 134, eDirUp, 13, 279, 132, eDirLeft) == 0 ) Unhandled ();
}


