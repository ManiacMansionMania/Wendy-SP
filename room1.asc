function hNachtkasten_AnyClick()
{
	if (any_click_move(240, 129, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Mein Nachtkästchen.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das steht da ganz gut.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Und mit was?");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			if ( GetGlobalInt(16) == 0 )
			{
				PlaySound(85);
				oKastentuer.Visible = true;
				SetGlobalInt(16,1);
			}
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			if ( GetGlobalInt(16) == 1 )
			{
				PlaySound(83);
				oKastentuer.Visible = false;
				SetGlobalInt(16,0);
			}
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
			if ( GetGlobalInt(16) == 0 )
			{
				PlaySound(85);
				oKastentuer.Visible = true;
				SetGlobalInt(16,1);
			}
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
			if ( GetGlobalInt(16) == 1 )
			{
				PlaySound(83);
				oKastentuer.Visible = false;
				SetGlobalInt(16,0);
			}
		}
		else Unhandled();
	}
}

