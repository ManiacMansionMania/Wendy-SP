// Flur erster Stock
import function aufz();

/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
  Door[eDoorNumDiningRoom].Init(oTuerEsszimmer, hTuerEsszimmer);
	Door[eDoorNumWendy].Init(oTuerWendy, hTuerWendy);

	// The elevator is always closed, when the player enters the room.
	oAufzugtuer.SetView(75, 0, 0);
	hKnoepfe.Enabled = false;
  RemoveWalkableArea(1);
}

function room_AfterFadeIn()
{
	// Bei Bedarf noch Nummer der weiteren Räume hinzufügen
	if ( player.PreviousRoom == 6)
	{
		oAufzugtuer.Animate(0, 10, eOnce, eBlock, eForwards);
		RestoreWalkableArea(1);
		hKnoepfe.Enabled = true;
  }
}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hTuerEsszimmer_AnyClick()
{
  if (Door[eDoorNumDiningRoom].Click() == 0) Unhandled();
}

function hTuerWendy_AnyClick()
{
	if (Door[eDoorNumWendy].Click() == 0) Unhandled();
}

