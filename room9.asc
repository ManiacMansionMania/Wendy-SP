function hBuecher_AnyClick()
{
	if (any_click_move(97, 126, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Da steckt viel Geld drin.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Erstens sind meine Taschen zu klein und zweitens wäre ich Jahre beschäftigt.");
		}
		else if (UsedAction(eActUse) || UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Du meinst doch nicht etwa ALLE?.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Die sind bereits alle verschlossen.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Ist mit zu mühselig.");
		}
		else Unhandled();
	}
}


