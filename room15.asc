// room script file

function on_call (int value)
{
  if (value == GAME_RESTORED)
  {
    oText.SetView(TranslateNumber ("_tv_44_view_ 81"));
  }
}

function room_Load()
{
	// Room before fade-in
  cMark.ChangeRoom(15, 148, 122);
  cMark.FaceDirection(eDirDown);
  oText.SetView(74); 
  oText.Animate(0, 0, eRepeat, eNoBlock, eForwards);
}

function room_AfterFadeIn()
{
  StartCutscene(eSkipESCOnly);
  Wait (20);
  cMark.Say("... sagte er, drücken hilft da nicht, er muss ziehen!");
  Wait (30);
  cMark.Say("Wir sehen uns Morgen.");
  Wait (20);
  player.FaceDirection(eDirDown);
  player.ChangeRoom(7);		// Zurück zum Wohnzimmer
  gAction.Visible = true;
  gMaingui.Visible = true;
  EndCutscene();	
}
